{% set parent = 'base.html.twig' %}
{% if app.user.role.name == "DATA_ADMIN" %}
    {% set parent = 'base_admin.html.twig' %}
{% elseif app.user.role.name == "SECRETAIRE" %}
    {% set parent = 'base_secretary.html.twig' %}
{% elseif app.user.role.name == "INFIRMIERE" %}
    {% set parent = 'base_nurse.html.twig' %}
{% elseif app.user.role.name == "MEDECIN" %}
    {% set parent = 'base_doctor.html.twig' %}
{% elseif app.user.role.name == "LABORATOIRE" %}
    {% set parent = 'base_laboratory.html.twig' %}
{% endif %}
{%extends parent %}

{% block title %}{{ parent() }}Modifier profil{% endblock %}

{% block body %}
	<div class="noselect" style="display: none">{{ app.user.role.name }}</div>
	<div class="container-fluid" style="margin-top: 2%;">
        <div class="row">
            <div class="col-lg-10">
			    <h1 class="text-center">Modifier profil</h1>

			    {{ include('personnal/_form.html.twig', {'button_label': 'Modifier'}) }}

			    <a href="{{ path('main_index') }}">Retour</a>

			    {# {{ include('personnal/_delete_form.html.twig') }} #}
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/personnal_edit.js') }}" async></script>
{% endblock %}
