{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}DMP{% endblock %}

{% block body %}
    <div class="container-fluid" style="margin-top: 2%;">
        {% if app.user.role.name == "MEDECIN" %}
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <nav aria-label="breadcrumb">
                      <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('main_index') }}">Accueil</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('doctor_search') }}">Recherche DMP</a></li>
                        <li class="breadcrumb-item active"><a href="{{ path("dmp_show", {"id": dmp.id}) }}">Voir DMP</a></li>
                        <li class="breadcrumb-item active">Voir examens</li>
                      </ol>
                    </nav>
                </div>
            </div>
        {% endif %}
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h1>Examens reliés au DMP n°{{ dmp.socialNumber }}</h1>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Etat</th>
                            <th>Contenu</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for exam in exams %}
                        <tr>
                            <td>{{ exam.title }}</td>
                            <td>{{ exam.state ? 'Terminé' : 'En cours' }}</td>
                            <td>{{ exam.content|slice(0, 100) }}...</td>
                            <td>
                                <a href="{{ path('exam_show', {'id': exam.id}) }}">Voir</a><br>
                                {# <a href="{{ path('exam_edit', {'id': exam.id}) }}">Modifier</a> #}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Aucun examens trouvés</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('dmp_show', {"id": dmp.id}) }}">Retour</a><br>

                {# {{ include('dmp/_delete_form.html.twig') }} #}
            </div>
        </div>
    </div>
    

    
{% endblock %}
