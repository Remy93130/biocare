{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}DMP{% endblock %}

{% block body %}
    <div class="container-fluid" style="margin-top: 2%;">
        {% if app.user.role.name == "MEDECIN" %}
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <nav aria-label="breadcrumb">
                      <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('main_index') }}">Accueil</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('doctor_search') }}">Recherche DMP</a></li>
                        <li class="breadcrumb-item active">Voir DMP</li>
                      </ol>
                    </nav>
                </div>
            </div>
        {% endif %}
        {% if app.user.role.name == "SECRETAIRE" %}
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path("main_index") }}">Accueil</a></li>
                            <li class="breadcrumb-item active">Voir DMP</li>
                        </ol>
                    </nav>
                </div>
            </div>
        {% endif %}
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h1 class="text-center">DMP</h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ dmp.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ dmp.surname }}</td>
                        </tr>
                        <tr>
                            <th>Prenom</th>
                            <td>{{ dmp.name }}</td>
                        </tr>
                        <tr>
                            <th>Numéro Sécurité Sociale</th>
                            <td>{{ dmp.socialNumber }}</td>
                        </tr>
                        <tr>
                            <th>Date de naissance</th>
                            <td>{{ dmp.birthDate ? dmp.birthDate|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Lieu de naissance</th>
                            <td>{{ dmp.birthPlace }}</td>
                        </tr>
                        <tr>
                            <th>Adresse</th>
                            <td>{{ dmp.address|replace({'\n': " ",}) }}</td>
                        </tr>
                    </tbody>
                </table>
                {% if app.user.role.name == "MEDECIN" %}
                    <a href="{{ path('doctor_search') }}">Nouvelle recherche</a><br>
                {% else %}
                    <a href="{{ path('main_index') }}">Retour</a><br>
                {% endif %}
                <a href="{{ path('dmp_edit', {'id': dmp.id}) }}">Modifier</a>

                {# {{ include('dmp/_delete_form.html.twig') }} #}
            </div>
        </div>
    </div>
    

    
{% endblock %}
