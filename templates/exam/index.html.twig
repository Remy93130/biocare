{% set parent = 'base.html.twig' %}
{% if app.user.role.name == "MEDECIN" %}
    {% set parent = 'base_doctor.html.twig' %}
{% elseif app.user.role.name == "LABORATOIRE" %}
    {% set parent = 'base_laboratory.html.twig' %}
{% endif %}
{%extends parent %}

{% block title %}Exam index{% endblock %}

{% block body %}
    <h1>Exam index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>State</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exam in exams %}
            <tr>
                <td>{{ exam.id }}</td>
                <td>{{ exam.title }}</td>
                <td>{{ exam.state ? 'Yes' : 'No' }}</td>
                <td>{{ exam.content }}</td>
                <td>
                    <a href="{{ path('exam_show', {'id': exam.id}) }}">Voir</a>
                    <a href="{{ path('exam_edit', {'id': exam.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('exam_new') }}">Create new</a>
{% endblock %}
