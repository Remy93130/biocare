{% set parent = 'base.html.twig' %}
{% if app.user.role.name == "MEDECIN" %}
    {% set parent = 'base_doctor.html.twig' %}
{% endif %}
{%extends parent %}

{% block title %}{{ parent() }}Actes{% endblock %}

{% block body %}
    <div class="container-fluid" style="margin-top: 2%;">
        <div class="row">
            <div class="col-lg-10">
                <h1 class="text-center">Acts index</h1>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Auteur</th>
                            <th>Date de creation</th>
                            <th>Etat</th>
                            <th>Patient</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for act in acts %}
                        <tr>
                            <td>{{ act.id }}</td>
                            <td>{{ act.author.surname }} {{ act.author.lastname }}</td>
                            <td>{{ act.dateCreation ? act.dateCreation|date('Y-m-d') : '' }}</td>
                            <td>{{ act.state ? 'Terminé' : 'En cours' }}</td>
                            <td>{{ act.dmp.surname }} {{ act.dmp.name }}<br>{{ act.dmp.socialNumber }}</td>
                            <td>
                                <a href="{{ path('acts_show', {'id': act.id}) }}">Voir</a><br>
                                {% if not act.state %}<a href="{{ path('acts_edit', {'id': act.id}) }}">Modifier</a>{% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">Aucun enregistrement trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <a href="{{ path('acts_new') }}">Nouvel Acte</a>
            </div>
        </div>
{% endblock %}
