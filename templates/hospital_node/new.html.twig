{% set parent = 'base.html.twig' %}
{% if app.user.role.name == "DATA_ADMIN" %}
    {% set parent = 'base_admin.html.twig' %}
{% endif %}
{%extends parent %}

{% block title %}{{ parent() }}Nouvelle Structure{% endblock %}

{% block body %}
    <div class="container-fluid" style="margin-top: 2%;">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h1 class="text-center">Créer une Nouvelle Structure</h1>
                {% include 'flashbag.html.twig'%}

                {{ include('hospital_node/_form.html.twig') }}

                <a href="{{ path('hospital_node_index') }}">Retour à la liste</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $("#hospital_node_ancestorNode").prepend($('<option>', {value:null, text:''}));;
    </script>
{% endblock %}