{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Connexion{% endblock %}

{% block body %}
<div class="container-fluid" style="margin-top: 3%;">
	<div class="row">
		<div class="col-lg-4 offset-lg-4 text-center">
			{% include 'flashbag.html.twig' %}
			{% if error %}
				<div class="alert alert-danger">
					{{ error.messageKey|trans(error.messagedata, "security") }}
				</div>
			{% endif %}
			<img src="{{ asset('img/APHP.svg') }}">
			<form style="margin-top: 10%;" method="post" action="{{ path('security_login') }}">
			  <div class="form-group">
			    <label for="email">IDENTIFIANT</label>
			    <input type="email" class="form-control" id="email" name="_username" value="{{ lastUsername }}">
			  </div>
			  <div class="form-group" style="margin-bottom: 10%;">
			    <label for="password">MOT DE PASSE</label>
			    <input type="password" class="form-control" id="password" name="_password">
			    <small id="passwordHelp" class="form-text text-muted">Mot de passe oubli√© ?</small>
			  </div>
			  <button type="submit" class="btn btn-primary">Se connecter</button>
			</form>
		</div>
	</div>
</div>
{% endblock %}
