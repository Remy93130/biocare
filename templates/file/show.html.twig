{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Fichier{% endblock %}

{% block body %}
    <div class="container-fluid" style="margin-top: 2%;">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('main_index') }}">Accueil</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('doctor_acts') }}">Acte en cours</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('acts_show', {id: file.act.id}) }}">Acte</a></li>
                        <li class="breadcrumb-item active">Fichier</li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h1 class="text-center">Fichier</h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ file.id }}</td>
                        </tr>
                        <tr>
                            <th>File</th>
                            <td><a href="{{ asset('uploads/' ~ file.file) }}" target="_blank">Télécharger</a></td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ file.name }}</td>
                        </tr>
                    </tbody>
                </table>

                {# <a href="{{ path('file_edit', {'id': file.id}) }}">edit</a> #}

                {{ include('file/_delete_form.html.twig') }}
                <br>
                <a href="{{ path('acts_show', {id: file.act.id}) }}">Retour à l'acte</a>
{% endblock %}
